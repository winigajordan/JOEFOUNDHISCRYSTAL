{% extends 'front.html.twig' %}

{% block title %} Confirmation de presence {% endblock %}

{% block body %}
    <section id="my-information">
        <h1>{% trans %}Your information{% endtrans %}</h1>
        <div id="inner-information">

            <div id="qr-code-block">

                <div>
                    <img class="user-pic" src="{{asset('Files/profiles/')}}{{ invite.photo }}" alt="">
                </div>

                <div>
                    <img src="{{asset('Files/qrcode/')}}{{ qrcode }}" alt="" width="150px" height="150px">
                    <p>{% trans %}Scan to download your information{% endtrans %}</p>
                </div>

                <div>
                    <p class="nb" style="padding-left: 15px">{% trans %}NB: Without your QR code or your<br>information you canâ€™t attend to reception{% endtrans %}</p>
                </div>

            </div>

            <div id="infos-form">

                <form>
                    <div>
                        <label for="coupleLastName">{% trans %}Last Name{% endtrans %}</label>
                        <input type="text" name="" id="coupleLastName" class="infos-input" style="padding-left: 25px; border:none;  font-family: 'Metal'" disabled value="{{ invite.nom }}">
                    </div>
                    <div>
                        <label for="firstName">{% trans %}First Name{% endtrans %}</label>
                        <input type="text" name="" id="firstName" class="infos-input" style="padding-left: 25px; border:none; font-family: 'Metal'" disabled value="{{ invite.prenom }}">
                    </div>
                    <div>
                        <label for="number">{% trans %}Whatsapp Number{% endtrans %}</label>
                        <input type="text" name="" id="number" class="infos-input" style="padding-left: 25px; border:none; font-family: 'Metal'" disabled value="{{ invite.telephone }}">
                    </div>
                    <div>
                        <label for="coupleLastName">{% trans %}Relationship with future couple{% endtrans %}</label>
                        <input type="text" name="" id="relationToCouple" class="infos-input" style="padding-left: 25px; border:none; font-family: 'Metal'" disabled value="{% if invite.situation == "epoux" %} {% trans %} Groom's family guest {% endtrans%}  {%else %}  {% trans %}Bride's family guest {% endtrans%} {% endif %}">
                    </div>
                    <div>
                        <label for="table">{% trans %}Table{% endtrans %}</label>
                        <input type="text" name="" id="table" class="infos-input" style="padding-left: 25px; border:none; font-family: 'Metal'" disabled value="{{ invite.place.nom }}">
                    </div>
                </form>

            </div>

        </div>
    </section>

    <section id="information-page-bottom">
        <img src="{{ asset('front/images/card 1.png') }}" alt="">
        <p>{% trans %}See Wedding Program{% endtrans %}</p>
    </section>

    <section class="filler"></section>
{% endblock %}