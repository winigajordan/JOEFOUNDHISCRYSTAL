    </div>

    <!-- Nom de la salle -->
    <div class="row" id="salle">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4>Modifier le nom de la salle</h4>
                    <form class="forms-sample" method="post" action="{{ path('update_name') }}">
                        <div class="form-group">
                            <label for="exampleInputUsername1" class="mt-3">Nom de la salle</label>
                            <input type="text" name="nom" class="form-control" id="exampleInputUsername1" value="{{ salle }}" placeholder="Username" required>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Modifier</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Gestion meet -->
    <div class="row" id="meet">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4>Informations de la reunion</h4>
                    <form class="forms-sample" method="post" action="{{ path('update_link') }}">

                        <div class="row d-flex justify-content-center mt-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="exampleInputName1">Lien</label>
                                    <input type="url" name="link" class="form-control" id="exampleInputName1" placeholder="Link" value="{{ reunion.url }}" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="exampleInputName1">Password</label>
                                    <input type="text" name="password" class="form-control" id="exampleInputName1" placeholder="Password" value="{{ reunion.password }}" required>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary mr-2">Modifier</button>

                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- CRUD Table -->
    <div class="row" id="tables">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4>Ajouter une table</h4>
                    <form class="forms-sample" method="post" action=" {% if table_selected is defined %} {{ path('update_table') }} {% else %} {{ path('add_table') }} {% endif %}">
                        <div class="form-group">
                            <label for="exampleInputUsername1" class="mt-3">Nom de la table</label>

                            <input type="text" name="nom" class="form-control" id="exampleInputUsername1" placeholder="Nom" required {% if table_selected is defined %} value="{{ table_selected.nom}} " {% endif %}>
                        </div>
                        {% if table_selected is defined %}
                            <div class="form-group">
                                <h5>Invites à la table </h5>
                                {% for invit in table_selected.invites %}
                                <label class="badge badge-primary">{{ invit.prenom }} {{ invit.nom }} </label>
                                {% endfor %}
                            </div>
                        {% endif %}
                        {% if table_selected is defined %}
                            <input type="text" name="id" value="{{ table_selected.id }}" hidden>
                            <button type="submit" class="btn btn-warning mr-2">Modifier</button>
                        {% else %}
                            <button type="submit" class="btn btn-primary mr-2">Ajouter</button>
                        {% endif %}
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste des tables </h4>
                    </p>
                    <div class="table-responsive">
                        <table class="table" >
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for tab in tables %}
                                <tr>
                                    <td>{{ tab.nom }}</td>
                                    <td>
                                        {%  if tab.invites|length > 10 %}
                                        <label class="badge badge-danger">Table pleine</label></td>
                                    {% else %}
                                        <label class="badge badge-primary">{{ 10 - (tab.invites|length) }} places dispo</label></td>
                                    {% endif %}
                                    <td>
                                        <a class="btn btn-outline-primary btn-sm" href="{{ path('dtl_table', {'slug':tab.slug}) }}">
                                            Details
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CRUD INVITE -->
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card" id="addInvite">
            <div class="card">
                <div class="card-body">
                    <h4>Ajouter un invité</h4>
                    <form class="forms-sample" method="post" action="{% if invite_selected is defined %} {{ path('update_invite')}} {% else %} {{ path('add_invite') }} {% endif%}" enctype="multipart/form-data">
                        <div class="form-group row mt-3">
                            <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Type | Table </label>
                            <div class="col-sm-9">
                                <select class="form-control" id="exampleFormControlSelect2" name="type">
                                    <option value="VIRTUEL">Virtuel</option>
                                    {% for tab in tables %}
                                        {% if tab.invites|length < 10 %}
                                            <option value="{{ tab.slug }}">{{ tab.nom }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputUsername1" >Nom</label>
                            <input type="text" name="nom" class="form-control" id="exampleInputUsername1" placeholder="Nom" value="{% if invite_selected is defined %} {{ invite_selected.nom}} {% endif%}" required>
                        </div>
                        {% if invite_selected is defined %}
                            <div class="form-group">
                                <input type="text" name="slug" class="form-control" id="exampleInputUsername1" placeholder="Nom" value="{{ invite_selected.slug }}" hidden>
                            </div>
                        {% endif%}
                        <div class="form-group">
                            <label for="exampleInputUsername1" class="mt-3"> Prenom </label>
                            <input type="text" name="prenom" class="form-control" id="exampleInputUsername1" placeholder="Prenom" value="{% if invite_selected is defined %} {{ invite_selected.prenom}} {% endif%}" required>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1" class="mt-3"> Email </label>
                            <input type="email" name="email" class="form-control" id="exampleInputUsername1" placeholder="Email" value="{% if invite_selected is defined %} {{ invite_selected.email}} {% endif%}" required >
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Telephone</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" name="telephone" id="exampleInputEmail2" placeholder="Telephone" value="{% if invite_selected is defined %} {{ invite_selected.telephone}} {% endif%}" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="exampleInputEmail2" class="col-sm-3 col-form-label">Invité par</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="exampleFormControlSelect2" name="situation" required>
                                    <option value="epouse">Invité de la mariée</option>
                                    <option value="epoux">Invité du marié</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputUsername1" class="mt-3"> Photo </label>
                            <input type="file" accept="image/*" name="image" class="form-control" id="exampleInputUsername1" placeholder="Photo" {% if invite_selected is not defined %} }} required{% endif%} >
                        </div>
                        <div class="form-group">
                            <label for="exampleTextarea1">Adresse</label>
                            <textarea class="form-control" id="exampleTextarea1" rows="3" name="adresse">{% if invite_selected is defined %}{{ invite_selected.adresse}}{% endif%}</textarea>
                        </div>
                        {% if invite_selected is defined %}
                            <button type="submit" class="btn btn-warning mr-2">Modifier</button>
                        {% else %}
                            <button type="submit" class="btn btn-primary mr-2">Ajouter</button>
                        {% endif%}


                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-6 grid-margin stretch-card" id="listeInvite">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste des Invites </h4>
                    </p>
                    <div class="table-responsive">
                        <table class="table" >
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Status/Table</th>
                                <th>Invitation Validé</th>
                                <th>Invitation envoyé</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for invite in invites %}
                                <tr>
                                    <td>{{ invite.prenom }} {{ invite.nom }} </td>
                                    <td>
                                        {%  if invite.type!="PHYSIQUE" %}
                                        <label class="badge badge-outline-warning">{{ invite.type }}</label></td>
                                    {% else %}
                                        <label class="badge badge-outline-primary">{{ invite.place.nom }}</label></td>
                                    {% endif %}
                                    <td>
                                        <a class="btn btn-outline-primary btn-sm" href="{{ path('dtl_invite', {'slug':invite.slug}) }}">
                                            Details
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CRUD Demandes -->
    <div class="row" id="demandes">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste des demandes </h4>
                    </p>
                    <div class="table-responsive">
                        <table class="table" >
                            <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Email</th>
                                <th>Numero de telephone</th>
                                <th>Acion | Table</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for dm in demandes %}
                                <form method="post" action="{{ path('demande_traitement') }}">
                                    <tr>
                                        <td> {{dm.prenom}} {{ dm.nom }}</td>
                                        <td> {{dm.email}} </td>
                                        <td> {{dm.telephone}} </td>
                                        <td>

                                            <select class="form-control" id="exampleFormControlSelect2" name="type" req >
                                                <option value="ANNULER">Annuler</option>
                                                <option value="VIRTUEL">Virtuel</option>
                                                {% for tab in tables %}
                                                    {% if tab.invites|length < 10 %}
                                                        <option value="{{ tab.slug }}">{{ tab.nom }}</option>
                                                    {% endif %}
                                                {% endfor %}

                                            </select>
                                        </td>
                                        <td>
                                            <input type="text" name="slug" value="{{ dm.slug }}" hidden>
                                            <input type="submit" value="VALIDER" class="form-control btn-outline-primary">
                                        </td>
                                    </tr>
                                </form>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}
