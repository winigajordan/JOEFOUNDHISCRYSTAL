{% extends 'test.html.twig' %}

{% block title %}Test QR Code {% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mt-5">
        <div class="col-4">
            <div class="card p-3">
                <div class="row">
                    <div class="col-6" >
                        <img src="{{ asset('Files/qrcode/invit-6301246a2a509.png') }} " alt="bonjour">
                    </div>

                </div>

                <p> Nom : {{ invit.nom }}</p>
                <p> Prenom : {{ invit.prenom}} </p>
                <p> Telephone : {{ invit.telephone }}</p>
                <form method="post" action="{{ path('invitation_validation') }}">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked name="validation">
                        <label class="form-check-label" for="flexSwitchCheckChecked">Je serai present</label>
                    </div>
                    <input type="text" name="slug" value="{{ invit.slug }}" hidden>
                    <input type="submit" class="form-control mt-3 ">
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
